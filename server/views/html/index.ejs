<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web Scrapped Data</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <div class="container mt-5 box-container">
        <form id="api-form">
            <h5 class="mb-5">Data Selection</h5>
            <div class="row mb-3">
                <!-- District Dropdown -->
                <div class="col-md-6">
                    <label for="district" class="form-label">District</label>
                    <select class="form-select" id="district">
                        <option value="">Select District</option>
                    </select>
                    <button type="button" class="btn btn-primary download-btn" onclick="downloadDistrictData()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-download" viewBox="0 0 16 16">
                            <path
                                d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5" />
                            <path
                                d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z" />
                        </svg>
                    </button>
                </div>

                <!-- Block Dropdown -->
                <div class="col-md-6">
                    <label for="block" class="form-label">Block</label>
                    <select class="form-select" id="block">
                        <option value="">Select Block</option>
                    </select>
                    <button type="button" class="btn btn-primary download-btn" onclick="downloadBlockData()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-download" viewBox="0 0 16 16">
                            <path
                                d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5" />
                            <path
                                d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z" />
                        </svg>
                    </button>
                </div>
            </div>

            <div class="row mb-3">
                <!-- Village Dropdown -->
                <div class="col-md-6">
                    <label for="village" class="form-label">Village</label>
                    <select class="form-select" id="village">
                        <option value="">Select Village</option>
                    </select>
                </div>

                <!-- Survey No Dropdown -->
                <div class="col-md-6">
                    <label for="survey_no" class="form-label">Survey No</label>
                    <select class="form-select" id="survey_no">
                        <option value="">Select Survey No</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <!-- Owner Name Dropdown -->
                <div class="col-md-6">
                    <label for="owner_name" class="form-label">Owner Name</label>
                    <select class="form-select" id="owner_name">
                        <option value="">Select Owner Name</option>
                    </select>
                </div>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SheetJS Library for Excel export -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.16.9/xlsx.full.min.js"></script>
    <!-- Custom JS -->
    <script src="script.js"></script>
</body>

</html>